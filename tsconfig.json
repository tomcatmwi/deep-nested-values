{                                                                     
  "compilerOptions": {
    "outDir": ".",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
